<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:colorBackground">@color/app_background</item>
    </style>

    <!-- 列表界面中每个列表项的布局风格-->
    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/element_height</item>
        <item name="android:paddingLeft">@dimen/small_padding_size</item>
        <item name="android:paddingRight">@dimen/small_padding_size</item>
        <item name="android:background">@color/list_bg_color</item>
    </style>

    <style name="list_functional_layout" parent="list_layout" >
        <item name="android:color">@android:color/white</item>
        <item name="android:background">@drawable/selector_bg_list_functional</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="list_text_caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/small_padding_size</item>
        <item name="android:paddingRight">@dimen/small_padding_size</item>
    </style>

    <style name="list_text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="list_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/small_padding_size</item>
    </style>

    <style name="list_right_button" parent="list_button">
        <item name="android:layout_alignParentRight">true</item>
    </style>


</resources>
