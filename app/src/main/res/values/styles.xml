<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:colorBackground">@color/app_background</item>
    </style>

    <style name="list_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="list_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/content_color</item>
    </style>

    <style name="list_element">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:paddingLeft">@dimen/comfort_padding_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="list_function_element" parent="list_element">
        <item name="android:background">@drawable/selector_bg_list_functional</item>
    </style>

    <style name="profile_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large_padding_size</item>
        <item name="android:layout_marginLeft">@dimen/common_padding_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="img_home">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="img_home_caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/small_padding_size</item>
    </style>

    <style name="home_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/content_color</item>
    </style>

    <style name="home_element">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selector_bg_list_functional</item>
    </style>

    <style name="caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="caption_only" parent="caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="content" parent="caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="content_only" parent="content">
        <item name="android:paddingRight">@dimen/common_padding_size</item>
    </style>

    <style name="simple_text_left_padding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/common_padding_size</item>
    </style>

</resources>