<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/element_height">

    <CheckBox style="@style/center_left_style"
        android:id="@+id/checkbox_expand"
        android:layout_width="0dp"
        android:layout_weight="6"/>


    <EditText style="@style/center_left_style"
        android:id="@+id/edit_expand_quantity"
        android:hint="@string/hint_add_quantity"
        android:inputType="number"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_weight="4"/>

</LinearLayout>


